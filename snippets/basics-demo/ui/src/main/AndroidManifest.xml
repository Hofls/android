<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basics">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name="com.example.basics.ui.activities.LifecycleDemoActivity"
            android:exported="false" />
        <activity
            android:name="com.example.basics.ui.containers.recycler.view.RecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name="com.example.basics.ui.containers.ScrollViewActivity"
            android:exported="false" />
        <activity
            android:name="com.example.basics.ui.containers.ContainersActivity"
            android:exported="false" />
        <activity
            android:name="com.example.basics.ui.containers.fragments.FragmentsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.basics.ui.activities.ActivitiesList"
            android:exported="false" />
        <activity
            android:name="com.example.basics.ui.widgets.WidgetsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.basics.ui.activities.DisplayMessageActivity"
            android:parentActivityName=".MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.basics.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>